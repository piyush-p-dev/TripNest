<% layout("/layouts/boilerplate") %>

<style>
  body {
    background-image: url("https://res.cloudinary.com/drmyf5ync/image/upload/v1748978920/Background_for_login_signup_mzlzzq.avif");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    backdrop-filter: blur(4px);
  }
</style>

<div
  class="container d-flex justify-content-center align-items-center auth-wrapper"
>
  <div class="auth-container text-center">
    <div class="auth-brand mb-3">
      <i class="fa-regular fa-compass"></i>
      <span class="auth-brand-text">TripNest</span>
    </div>
    <h2 class="mb-4">Create Your Account</h2>

    <form
      action="/signup"
      method="POST"
      class="text-start needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="Choose a username"
          required
        />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="Enter your email"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Create a password"
          required
        />
      </div>

      <button type="submit" class="btn auth-btn w-100 mt-2">Sign Up</button>
    </form>

    <hr class="my-4" />

    <p class="mb-2">Already have an account?</p>
    <a href="/login" class="btn auth-btn-outline w-100">Login</a>
  </div>
</div>
